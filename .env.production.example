# Production Environment Configuration
# Copy this file to .env.production and update the values

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-production-key-generate-with-django-utils
DJANGO_SETTINGS_MODULE=app.settings

# Allowed Hosts (comma-separated, no spaces)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-vps-ip-address,localhost,127.0.0.1

# Database Configuration (Docker containers)
DB_ENGINE=django.db.backends.mysql
DB_NAME=dryCleanShop
DB_USER=dryclean_user
DB_PASSWORD=your-strong-database-password
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=your-strong-root-password

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_HOURS=12
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Email Configuration (Optional - for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Static Files (handled by nginx in production)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Logging
LOG_LEVEL=INFO

# Deployment Environment
DEPLOYMENT_ENVIRONMENT=production